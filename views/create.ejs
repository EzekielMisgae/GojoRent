<html lang="en">
<%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="container">
      <div class="upload-house content">
        <form action="/houses" method="POST" enctype="multipart/form-data">
          
          <div class="form-group">
            <label for="title">House name:</label>
            <input type="text" class="form-control" id="body" name="title" required>
          </div>
          <div class="form-group">
            <label for="housePrice">Price:</label>
            <input type="text" class="form-control" id="body" name="housePrice" required>
          </div>

          <div class="form-group">
            <label for="houseType">Type:</label>
            <input type="text" class="form-control" id="body" name="houseType" required>
          </div>

          <div class="form-group">
            <label for="houseAddress">Address:</label>
            <input type="text" class="form-control" id="body" name="houseAddress" required>
          </div>

          <div class="form-group">
            <label for="houseCity">City:</label>
            <input type="text" class="form-control" id="body" name="houseCity" required>
          </div>

          <div class="form-group">
            <label for="phone">Phone number:</label>
            <input type="text" class="form-control" id="body" name="phone" required>
          </div>

          <div class="form-group">
            <label for="houseTag">Tag:</label>
            <input type="text" class="form-control" id="body" name="houseTag" required>
          </div>

          <div class="form-group">
            <label for="body">Description:</label>
            <textarea class="form-control" id="body" name="description" required></textarea>
          </div>

          <div class="form-group">
            <label for="houseImage">Upload Image(s):</label>
            <input type="file" class="form-control" id="body" name="houseImage" multiple>
          </div>
          <button type="submit" class="btn btn-primary">Upload</button>

        </form>        
    </div>
  </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>